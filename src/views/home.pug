doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        link(rel="stylesheet" href="https://unpkg.com/mvp.css")

        link(rel="shortcut icon" href="/public/favicon.png" type="image/png")

        title Noom - The Zoom Clone
    body
        header
            h1 Noom

        main
            section
                header
                    h2 Welcome to Noom, the zoom clone.

                form#nickname
                    input(type="text" placeholder="Choose a nickname...", required)
                    button Save
                hr

            section#join_room
                header
                    h3 Active rooms:

                ul#active_rooms
                hr

                form
                    header
                        h3 Join/create a chat room.

                    input(type="text" placeholder="Room name", required)
                    button Enter Room

            section#room
                header
                    h3 
                    button#leave_room(style={background: 'red', border: 'none'}) Leave Room

                ul#messages
                hr

                form#new_message
                    input(type="text" placeholder="Write a message...", required)
                    button Send

        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 
