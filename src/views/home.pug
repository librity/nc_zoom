doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        link(rel="stylesheet" href="https://unpkg.com/mvp.css")

        link(rel="shortcut icon" href="/public/favicon.png" type="image/png")

        title Noom - The Zoom Clone
    body
        header
            h1 Noom

        main
            section
                h2 Welcome to Noom, the zoom clone.
            hr

            section
                header
                    h3 Messages
                ul

            section
                form#nickname
                    input(id="nickname" type="text" placeholder="Choose a nickname...", required)

                    button Save

                form#message
                    input(id="message" type="text" placeholder="Write a message...", required)

                    button Send


        script(src="/public/js/app.js") 
