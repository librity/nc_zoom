doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        link(rel="stylesheet" href="/public/css/app.css")

        link(rel="shortcut icon" href="/public/favicon.png" type="image/png")

        title Noom - The Zoom Clone
    body
        header
            h1 Noom
            p Welcome to Noom, the zoom clone.

        main
            div#join_room
                section
                    form#join_room_form
                        input(placeholder="room name", required, type="text")
                        button Enter Room

            div#call
                section#my_stream
                    button.video_control.leave_room#leave_room Leave
                    button.video_control#mute Mute
                    button.video_control#shut_camera Turn Camera Off
                    select.video_control#camera_selector

                section
                    div.videobox
                        video.video_stream#user_video(autoplay, playsinline, width="400")

                    div.videobox
                        video.video_stream#peer_video(autoplay, playsinline, width="400")

                section.call_chat#call_chat
                    div#messages

                    form.chat_message_form#chat_message_form
                        input(placeholder="type a message", required, type="text")
                        button Send

        script(src="/socket.io/socket.io.js")

        script(src="/public/js/global.js")
        script(src="/public/js/call_chat.js") 
        script(src="/public/js/video.js")
        script(src="/public/js/rtc.js")
        script(src="/public/js/sockets.js")
        script(src="/public/js/join_room.js") 
        script(src="/public/js/call.js")
